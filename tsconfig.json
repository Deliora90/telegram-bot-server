{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@api/*": [
        "api/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@globalTypes/*": [
        "globalTypes/*"
      ],
      "@constants": [
        "constants.ts"
      ],
      "@configs": [
        "configs.ts"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
}