{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@constants": [
        "src/constants.ts"
      ],
      "@configs": [
        "src/configs.ts"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@models/*": [
        "src/models/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
}