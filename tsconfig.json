{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@globalTypes/*": [
        "src/globalTypes/*"
      ],
      "@constants": [
        "src/constants.ts"
      ],
      "@configs": [
        "src/configs.ts"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
}